<UserControl x:Class="Cafe_Managment.View.Employees"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vn="clr-namespace:Cafe_Managment.ViewModel"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:local="clr-namespace:Cafe_Managment.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <CollectionViewSource x:Key="MyCollectionViewSource" Source="{Binding Employees}"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

    </UserControl.Resources>

    <UserControl.DataContext>
        <vn:EmployeeVM/>
    </UserControl.DataContext>
    <Grid>
        <TextBlock Text="Сотрудники" 
           Style="{DynamicResource Text_Headline1}" 
           HorizontalAlignment="Left" 
           Margin="20,0,0,0"/>
        <Border Margin="20,60,20,20"
                CornerRadius="10" 
                Background="{DynamicResource SecondaryColor1}"
                >
            <ScrollViewer x:Name="Viewer"
                      
                      VerticalScrollBarVisibility="Hidden"
                      >

                <Grid Height="1000">
                    <TextBlock Text="Cотрудники" 
                           Style="{DynamicResource Text_Headline2}"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Center"/>
                    <StackPanel>
                        <!--<DataGrid x:Name="EmployeesDataGrid"
                    Width="auto"
                    Height="auto"
                  Margin="20,40,20,0" 
                  VerticalAlignment="Top"
                  HorizontalAlignment="Center"
                  CanUserSortColumns="False"
                  ColumnHeaderStyle="{StaticResource DarkColumnHeaderStyle}"
                  Style="{DynamicResource MinimalisticDataGrid}"
                  ItemsSource="{Binding Source={StaticResource MyCollectionViewSource}}"
                  CanUserReorderColumns="False" HeadersVisibility="Column" 
                  >
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsLastRowVisible}" Value="False">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                        </DataGrid>-->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0 10 0 0">
                            <Button Content="Должность" Style="{StaticResource TabButton}" BorderBrush="Aqua"/>
                            <Button Content="Имя" Style="{StaticResource TabButton}" BorderBrush="Aqua"/>
                            <Button Content="Фамилия" Style="{StaticResource TabButton}" BorderBrush="Aqua"/>
                        </StackPanel>
                        <!--Counter title-->
                        <TextBlock Text="Персонал" Grid.Row="4" FontSize="18" FontWeight="SemiBold"
                            Foreground="Black" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        <TextBlock Text="Фильтр" Grid.Row="4" FontSize="13" FontWeight="SemiBold" Margin="0 0 215 0"
                            Foreground="Black" HorizontalAlignment="Right" VerticalAlignment="Center"/>

                        <!--Filter Textbox-->
                        <Grid Width="200" HorizontalAlignment="Right" Grid.Row="4">
                            <TextBox Margin="15 0" VerticalAlignment="Center" Foreground="White" IsHitTestVisible="False"
                                       Panel.ZIndex="1" Text="Поиск по сотрудникам..."/>

                            <TextBox x:Name="txtFilter" Style="{StaticResource textboxFilter}"/>
                        </Grid>

                        <!--search Textbox-->

                        <Grid Width="300" HorizontalAlignment="Left">
                            <TextBlock Margin="20 0" VerticalAlignment="Center" Foreground="White" IsHitTestVisible="False"
                                       Panel.ZIndex="1" Text="Поиск"/>
                            <TextBox x:Name="txtSearch" Style="{StaticResource textboxSearch}" />
                            <Icon:PackIconMaterial Kind="Magnify" Width="15" Height="15" VerticalAlignment="Center"
                                                   Margin="0 0 15 0" Foreground="{StaticResource NormalTextColor1}" HorizontalAlignment="Right"/>
                        </Grid>

                        <!--Members Datagrid -->

                        <DataGrid Grid.Row="5" x:Name="MembersDataGrid" RowStyle="{DynamicResource DataGridRowStyle1}" 
                                  ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                                  CellStyle="{DynamicResource DataGridCellStyle1}" 
                                  Style="{DynamicResource DataGridStyle1}"
                                  ItemsSource="{Binding Employees}">
                            <DataGrid.Columns>
                                <DataGridCheckBoxColumn CanUserReorder="False" Width="auto">
                                    <DataGridCheckBoxColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <CheckBox/>
                                        </DataTemplate>
                                    </DataGridCheckBoxColumn.HeaderTemplate>
                                </DataGridCheckBoxColumn>

                                <DataGridTextColumn Header="#" IsReadOnly="True" CanUserResize="False" Width="auto"/>
                                <DataGridTemplateColumn Header="Действия" IsReadOnly="True" Width="auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Style="{StaticResource GridEditButton}">
                                                    <Icon:PackIconMaterial Kind="PencilOutline" Style="{StaticResource gridButtonIcon}"/>
                                                </Button>

                                                <Button Style="{StaticResource GridRemoveButton}">
                                                    <Icon:PackIconMaterial Kind="DeleteOutline" Style="{StaticResource gridButtonIcon}"/>
                                                </Button>

                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>

                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Имя пользователя" IsReadOnly="True" Width="*"/>
                                <DataGridTextColumn Header="Должность" IsReadOnly="True" Width="*"/>
                                <DataGridTextColumn Header="Email" IsReadOnly="True" Width="*"/>
                                <DataGridTextColumn Header="Номер телефона" IsReadOnly="True" Width="*"/>
                                <DataGridTextColumn Header="Статус" IsReadOnly="True" Width="*"/>

                            </DataGrid.Columns>
                        </DataGrid>


                        <!--Pagination section -->
                        <Border Grid.Row="6" HorizontalAlignment="Right" BorderBrush="White" BorderThickness="1"
                                    CornerRadius="5" Padding="5" Background="White" Margin="0 10 10 10">
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{StaticResource PagingButton}">
                                    <Icon:PackIconMaterial Kind="ChevronLeft" Style="{StaticResource PagingButtonIcon}"/>
                                </Button>
                                <Rectangle Width="1" Fill="White" Margin="3 7"/>
                                <Button Style="{StaticResource PagingButton}" Content="1"/>
                                <Button Style="{StaticResource PagingButton}" Content="2" Background="Purple" Foreground="White"/>
                                <Button Style="{StaticResource PagingButton}" Content="3"/>

                                <TextBlock Text="..." Foreground="Gray" VerticalAlignment="Center" FontSize="15" Margin="10 0"/>

                                <Button Style="{StaticResource PagingButton}" Content="7"/>
                                <Button Style="{StaticResource PagingButton}" Content="8"/>
                                <Button Style="{StaticResource PagingButton}" Content="9"/>

                                <Rectangle Width="1" Fill="White" Margin="3 7"/>

                                <Button Style="{StaticResource PagingButton}">
                                    <Icon:PackIconMaterial Kind="ChevronRight" Style="{StaticResource PagingButtonIcon}"/>
                                </Button>

                            </StackPanel>
                        </Border>

                        <!--add button -->

                        <Button Style="{StaticResource AddButton}">
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="Plus" VerticalAlignment="Center" Width="11" Height="11" Margin="0 1 8 0"/>

                            </StackPanel>
                        </Button>

                        <StackPanel Margin="20" FlowDirection="LeftToRight" Orientation="Horizontal">
                            <Button Content="Нанять"
                            Style="{DynamicResource DefaultButton}"
                            HorizontalAlignment="Left" VerticalAlignment="Bottom"
                            Height="40" Width="100" 
                            Margin="0"/>
                            <Button Content="Уволить" 
                            Command="{Binding HireCommand}"
                            Style="{DynamicResource DefaultButton}"
                            HorizontalAlignment="Left" VerticalAlignment="Bottom"
                            Height="40" Width="100" 
                            Margin="10,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
