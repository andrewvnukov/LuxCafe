<UserControl x:Class="Cafe_Managment.View.Employees"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vn="clr-namespace:Cafe_Managment.ViewModel"
             xmlns:local="clr-namespace:Cafe_Managment.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vn:EmployeeVM/>
    </UserControl.DataContext>
    <Grid>
        <TextBlock Text="Сотрудники" 
           Style="{DynamicResource Text_Headline1}" 
           HorizontalAlignment="Left" 
           Margin="20,0,0,0"/>
        <Border Margin="20,60,20,20"
                CornerRadius="10" 
                
                >
            <Border.Background>
                <SolidColorBrush Color="LightGray" Opacity="0.2"/>
            </Border.Background>
        <ScrollViewer x:Name="Viewer"
                      
                      VerticalScrollBarVisibility="Hidden"
                      >
            
            <Grid Height="1000">
                <TextBlock Text="Все сотрудники" 
                           Style="{DynamicResource Text_Headline2}"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Center"/>
                    <StackPanel>
                <DataGrid
                    Width="auto"
                    Height="auto"
                  Margin="20,40,20,0" 
                  VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                  CanUserSortColumns="False"
                  Background="Transparent"
                  BorderThickness="0"
                  ItemsSource="{Binding Employees, Mode=OneWay}" 
                  CanUserReorderColumns="False" 
                  CanUserResizeColumns="False"
                  RowBackground="Aquamarine" AutomationProperties.IsRowHeader="False"
                  >
                    
                </DataGrid>
                <StackPanel Margin="20" FlowDirection="LeftToRight" Orientation="Horizontal">
                    <Button Content="Нанять"
                            Style="{DynamicResource DefaultButton}"
                            HorizontalAlignment="Left" VerticalAlignment="Bottom"
                            Height="40" Width="100" 
                            Margin="0"/>
                    <Button Content="Уволить" 
                            Command="{Binding HireCommand}"
                            Style="{DynamicResource DefaultButton}"
                            HorizontalAlignment="Left" VerticalAlignment="Bottom"
                            Height="40" Width="100" 
                            Margin="10,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
        </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
