<UserControl x:Class="Cafe_Managment.View.Employees"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vn="clr-namespace:Cafe_Managment.ViewModel"
             xmlns:local="clr-namespace:Cafe_Managment.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vn:EmployeeVM/>
    </UserControl.DataContext>
    <Grid>
        <TextBlock Text="Сотрудники" 
           Style="{DynamicResource Text_Headline1}" 
           HorizontalAlignment="Left" 
           Margin="20,0,0,0"/>
        <ScrollViewer x:Name="Viewer"
                      Margin="20,60,20,20"
                      >
            
            <Grid Height="500">
                <DataGrid
                  Margin="20" 
                  CanUserSortColumns="False"
                  Background="Transparent"
                  BorderThickness="0"
                  ItemsSource="{Binding Employees, Mode=OneWay}" 
                  CanUserReorderColumns="False" 
                  CanUserResizeColumns="False"/>
                <Button Style="{DynamicResource DefaultButton}" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="40" Width="100" Margin="0"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
