<UserControl x:Class="Cafe_Managment.View.Employees"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vn="clr-namespace:Cafe_Managment.ViewModel"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:local="clr-namespace:Cafe_Managment.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <CollectionViewSource x:Key="MyCollectionViewSource" Source="{Binding Employees}"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

    </UserControl.Resources>

    <UserControl.DataContext>
        <vn:EmployeeVM/>
    </UserControl.DataContext>
    <Grid>
        <ScrollViewer x:Name="Viewer" 
                      VerticalScrollBarVisibility="Hidden"
                      >

                <Grid Height="1000">
                    <TextBlock Text="Cотрудники" 
                           Style="{DynamicResource Text_Headline2}"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Center"/>
                <StackPanel>

                        <!--Members Datagrid -->

                    <DataGrid Grid.Row="6" x:Name="MembersDataGrid" Margin="5 40 5 0" RowStyle="{DynamicResource DataGridRowStyle1}" 
                                  ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                                  CellStyle="{DynamicResource DataGridCellStyle1}" 
                                  Style="{DynamicResource DataGridStyle1}"
                                  ItemsSource="{Binding Employees, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  
                                  SelectedIndex="{Binding SelectedEmployee, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" CanUserReorderColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            
                                <DataGridTemplateColumn Header="Действия" IsReadOnly="True" Width="auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Style="{StaticResource GridEditButton}">
                                                    <Icon:PackIconMaterial Kind="PencilOutline" Style="{StaticResource gridButtonIcon}"/>
                                                </Button>

                                                <Button Style="{StaticResource GridRemoveButton}">
                                                    <Icon:PackIconMaterial Kind="CheckOutline" Style="{StaticResource gridButtonIcon}"/>
                                                </Button>

                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>

                                </DataGridTemplateColumn>
                                
                        </DataGrid.Columns>
                        <DataGrid.Resources>
                            <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource CustomHorizontalScrollBarStyle}"/>
                        </DataGrid.Resources>
                    </DataGrid>


                        <!--Pagination section -->
                        <!--<Border Grid.Row="6" HorizontalAlignment="Right" BorderBrush="White" BorderThickness="1"
                                    CornerRadius="5" Padding="5" Background="White" Margin="0 10 10 10">
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{StaticResource PagingButton}">
                                    <Icon:PackIconMaterial Kind="ChevronLeft" Style="{StaticResource PagingButtonIcon}"/>
                                </Button>
                                <Rectangle Width="1" Fill="White" Margin="3 7"/>
                                <Button Style="{StaticResource PagingButton}" Content="1"/>
                                <Button Style="{StaticResource PagingButton}" Content="2" Background="Purple" Foreground="White"/>
                                <Button Style="{StaticResource PagingButton}" Content="3"/>

                                <TextBlock Text="..." Foreground="Gray" VerticalAlignment="Center" FontSize="15" Margin="10 0"/>

                                <Button Style="{StaticResource PagingButton}" Content="7"/>
                                <Button Style="{StaticResource PagingButton}" Content="8"/>
                                <Button Style="{StaticResource PagingButton}" Content="9"/>

                                <Rectangle Width="1" Fill="White" Margin="3 7"/>

                                <Button Style="{StaticResource PagingButton}">
                                    <Icon:PackIconMaterial Kind="ChevronRight" Style="{StaticResource PagingButtonIcon}"/>
                                </Button>

                            </StackPanel>                       
                        </Border>-->
                 
                        <StackPanel Margin="20" FlowDirection="LeftToRight" Orientation="Horizontal">
                            <Button Content="Нанять"
                                    Command="{Binding HireCommand}"
                            Style="{DynamicResource DefaultButton}"
                            HorizontalAlignment="Left" VerticalAlignment="Bottom"
                            Height="40" Width="100" 
                            Margin="0"/>
                            <Button Content="Уволить" 
                            Command="{Binding FireCommand}"
                            Style="{DynamicResource DefaultButton}"
                            HorizontalAlignment="Left" VerticalAlignment="Bottom"
                            Height="40" Width="100" 
                            Margin="10,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        
        
    </Grid>
</UserControl>
