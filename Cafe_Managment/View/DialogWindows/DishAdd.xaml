<Window x:Class="Cafe_Managment.View.DialogWindows.DishAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cafe_Managment.View.DialogWindows"
        mc:Ignorable="d"
        Title="DishAdd" Height="450" Width="800"
        Style="{DynamicResource DialogWindow1}">
    <Border Background="{DynamicResource PrimaryColor1}">
    <Grid>
            <StackPanel>
                <TextBlock Text="Добавление блюда в архив" Style="{DynamicResource Text_Headline2}"
                           Foreground="{DynamicResource AccientColor1}"
                           Margin="10"/>
                <Grid
                    Margin="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBox Tag="Название" Style="{DynamicResource LoginTextBox}"
                                 Margin="20"/>
                        <TextBox Tag="Цена" Style="{DynamicResource LoginTextBox}"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
    </Grid>
    </Border>
</Window>
