<UserControl x:Class="Cafe_Managment.View.Profile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cafe_Managment.View"
             xmlns:vm="clr-namespace:Cafe_Managment.ViewModel"
             xmlns:m="clr-namespace:Cafe_Managment.Model"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:ProfileVM/>
    </UserControl.DataContext>

    <Grid>
        <TextBlock Text="Личный кабинет" Style="{DynamicResource Text_Headline1}" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top" Margin="0,0,0,0"/>
        <ScrollViewer Margin="10,40,10,10"
                      VerticalScrollBarVisibility="Hidden">
            <Grid Height="auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical">
                    <Image Grid.Column="0"
                   Height="auto"
                   Width="auto"
                   Stretch="Uniform"
                        Margin="20 20 20 10"
                   Source="{Binding CurrentData.ProfileImage, Mode=OneWay}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top" ScrollViewer.VerticalScrollBarVisibility="Disabled"
                        />
                    <Button Style="{StaticResource Text_Button}"
                            Foreground="AntiqueWhite"
                            Width="160"
                            Margin="10"
                            Tag="Изменить фотографию"/>
                </StackPanel>
                <StackPanel Orientation="Vertical"
                                Grid.Column="1">
                        <TextBlock Margin="5,0,0,0"
                                   Text="{Binding Fullname, Mode=TwoWay}"
                                   Style="{DynamicResource Text_Headline2}"/>
                    <StackPanel Orientation="Horizontal"
                                Margin="10">
                        <TextBox Style="{DynamicResource Textbox_Outer1}"
                             Width="auto"
                             HorizontalAlignment="Center"
                             Tag="ФИО"
                             Text="{Binding CurrentData.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Margin="10">
                        <TextBox Style="{DynamicResource Textbox_Outer1}"
                                 Width="auto"
                                 HorizontalAlignment="Center"
                                 Tag="Адрес"
                                 Text="{Binding CurrentData.Address, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <CheckBox Style="{DynamicResource Edit_Button}"
                                    Margin="5 0 0 0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Height="20"
                                    Width="auto"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
            Margin="10">
                        <TextBox Style="{DynamicResource Textbox_Outer1}"
             Width="auto"
             HorizontalAlignment="Center"
             Tag="Почта"
             Text="{Binding CurrentData.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <CheckBox Style="{DynamicResource Edit_Button}"
                Margin="5 0 0 0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="20"
                Width="auto"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
            Margin="10">
                        <TextBox Style="{DynamicResource Textbox_Outer1}"
             Width="auto"
             HorizontalAlignment="Center"
             Tag="Почта"
             Text="{Binding CurrentData.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <CheckBox Style="{DynamicResource Edit_Button}"
                Margin="5 0 0 0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="20"
                Width="auto"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
            Margin="10">
                        <TextBox Style="{DynamicResource Textbox_Outer1}"
             Width="auto"
             HorizontalAlignment="Center"
             Tag="Почта"
             Text="{Binding CurrentData.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <CheckBox Style="{DynamicResource Edit_Button}"
                Margin="5 0 0 0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="20"
                Width="auto"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
            Margin="10">
                        <TextBox Style="{DynamicResource Textbox_Outer1}"
             Width="auto"
             HorizontalAlignment="Center"
             Tag="Почта"
             Text="{Binding CurrentData.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <CheckBox Style="{DynamicResource Edit_Button}"
                Margin="5 0 0 0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="20"
                Width="auto"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
            Margin="10">
                        <TextBox Style="{DynamicResource Textbox_Outer1}"
             Width="auto"
             HorizontalAlignment="Center"
             Tag="Почта"
             Text="{Binding CurrentData.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <CheckBox Style="{DynamicResource Edit_Button}"
                Margin="5 0 0 0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="20"
                Width="auto"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
