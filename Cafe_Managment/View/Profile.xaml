<UserControl x:Class="Cafe_Managment.View.Profile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cafe_Managment.View"
             xmlns:vm="clr-namespace:Cafe_Managment.ViewModel"
             xmlns:m="clr-namespace:Cafe_Managment.Model"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:ProfileVM/>
    </UserControl.DataContext>

    <Grid>
        <TextBlock Text="Profile" Style="{DynamicResource Text_Headline1}" 
                   HorizontalAlignment="Left" Margin="10"/>
        <ScrollViewer Margin="10,40,10,10" 
                      VerticalScrollBarVisibility="Hidden">
            <Grid Height="auto">
                <StackPanel Orientation="Vertical">
                    <Border Background="Transparent" 
                            BorderBrush="White" BorderThickness="1"
                             Width="150" Height="150">
                    <Image
                  Stretch="Fill"
                   Source="{Binding ProfilePicture, Mode=OneWay}"
                   
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top">
                    </Image>
                    </Border>
                <TextBlock Text="Имя тд тп"
                           HorizontalAlignment="Center"
                           Style="{DynamicResource Default_Text}"/>
                </StackPanel>

            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
