<UserControl x:Class="Cafe_Managment.View.Profile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cafe_Managment.View"
             xmlns:vm="clr-namespace:Cafe_Managment.ViewModel"
             xmlns:m="clr-namespace:Cafe_Managment.Model"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:ProfileVM/>
    </UserControl.DataContext>

    <Grid>
        <TextBlock Text="Profile" Style="{DynamicResource Text_Headline1}" 
                   HorizontalAlignment="Left" Margin="10,0,0,0"/>
        <ScrollViewer Margin="10,40,10,10"
                      VerticalScrollBarVisibility="Hidden">
            <Grid Height="auto">
                <StackPanel Orientation="Horizontal"
                            >
                    
                    <Image
                   Height="150"
                   Width="Auto"
                   Stretch="Uniform"
                        
                   Source="{Binding CurrentData.ProfileImage, Mode=OneWay}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top">
                    </Image>

                    <StackPanel Orientation="Vertical">
                    <StackPanel Margin="10,0,0,10"
                                Orientation="Horizontal"
                                FlowDirection="LeftToRight">
                        <TextBlock Text="ФИО:" 
                                   Style="{DynamicResource Text_Headline3}"
                                   VerticalAlignment="Bottom"/>
                        <TextBlock Margin="5,0,0,0"
                                   VerticalAlignment="Bottom"
                                   Text="{Binding Fullname, Mode=TwoWay}"
                                   Style="{DynamicResource Default_Text}"
                           />
                    </StackPanel>
                    <StackPanel Margin="10,10,0,10"
            Orientation="Horizontal"
            FlowDirection="LeftToRight">
                        <TextBlock Text="Номер телефона:" 
               Style="{DynamicResource Text_Headline3}"
               VerticalAlignment="Bottom"/>
                        <TextBlock Margin="5,0,0,0"
               VerticalAlignment="Bottom"
        Text="{Binding CurrentData.PhoneNumber}"
       Style="{DynamicResource Default_Text}"
       />
                    </StackPanel>
                    <StackPanel Margin="10,10,0,10"
            Orientation="Horizontal"
            FlowDirection="LeftToRight">
                        <TextBlock Text="Адрес:" 
               Style="{DynamicResource Text_Headline3}"
               VerticalAlignment="Bottom"/>
                        <TextBlock Margin="10,0,0,0"
               VerticalAlignment="Bottom"
        Text="{Binding CurrentData.Address}"
       Style="{DynamicResource Default_Text}"
       />
                    </StackPanel>
                    <StackPanel Margin="10,10,0,10"
            Orientation="Horizontal"
            FlowDirection="LeftToRight">
                        <TextBlock Text="Статус:" 
               Style="{DynamicResource Text_Headline3}"
               VerticalAlignment="Bottom"/>
                        <TextBlock Margin="5,0,0,0"
               VerticalAlignment="Bottom"
        Text="{Binding CurrentData.Status}"
       Style="{DynamicResource Default_Text}"
       />
                    </StackPanel>
                    <StackPanel Margin="10,10,0,10"
            Orientation="Horizontal"
            FlowDirection="LeftToRight">
                        <TextBlock Text="Должность:" 
               Style="{DynamicResource Text_Headline3}"
               VerticalAlignment="Bottom"/>
                        <TextBlock Margin="5,0,0,0"
               VerticalAlignment="Bottom"
        Text="{Binding Role}"
       Style="{DynamicResource Default_Text}"
       />
                    </StackPanel>
                    <StackPanel Margin="10,10,0,10"
            Orientation="Horizontal"
            FlowDirection="LeftToRight">
                        <TextBlock Text="Дата рождения:" 
               Style="{DynamicResource Text_Headline3}"
               VerticalAlignment="Bottom"/>
                        <TextBlock Margin="5,0,0,0"
               VerticalAlignment="Bottom"
        Text="{Binding CurrentData.BirthDay}"
       Style="{DynamicResource Default_Text}"
       />
                    </StackPanel>
                    <StackPanel Margin="10,10,0,10"
     Orientation="Horizontal"
     FlowDirection="LeftToRight">
                        <TextBlock Text="Электронная почта:" 
        Style="{DynamicResource Text_Headline3}"
        VerticalAlignment="Bottom"/>
                        <TextBlock Margin="10,0,0,0"
        VerticalAlignment="Bottom"
 Text="{Binding CurrentData.Email}"
Style="{DynamicResource Default_Text}"
/>
                    </StackPanel>
                </StackPanel>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
