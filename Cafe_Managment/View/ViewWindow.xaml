<Window x:Class="Cafe_Managment.View.ViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cafe_Managment.View"
        xmlns:vm="clr-namespace:Cafe_Managment.ViewModel"
        mc:Ignorable="d"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"    
        Title="ViewWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:ViewWindowVM/>
    </Window.DataContext>
    
    <Grid>
        <StackPanel MouseLeftButtonDown="StackPanel_MouseLeftButtonDown"
                    VerticalAlignment="Top" Height="30" 
                    Panel.ZIndex="1"
                    Background="Transparent">
            <Button Margin="7,7,0,0" Style="{DynamicResource CloseApp}"
        Command="{Binding CloseAppCommand}"/>
        </StackPanel>
        <ContentControl Panel.ZIndex="0" x:Name="MainViewer" Content="{Binding ActiveWindow}"/>
    </Grid>
</Window>
