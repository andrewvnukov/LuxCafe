<UserControl x:Class="Cafe_Managment.Controls.Category"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cafe_Managment.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border CornerRadius="10"
        BorderBrush="{DynamicResource AccientColor1}"
        BorderThickness="1"
            MaxHeight="200"
            MaxWidth="200">
        <Border.Background>
            <SolidColorBrush Opacity="0.3" Color="{DynamicResource BorderGradientColor1}"/>
        </Border.Background>
        <Grid
            Margin="0">
            <StackPanel
                Orientation="Vertical">
                <Image Name="Picture" Stretch="Uniform" Margin="10"
                       MaxHeight="100"/>
                <TextBlock Name="Header" Style="{DynamicResource Text_Headline2}"
                           Margin="10 0 10 0"
                           Foreground="{DynamicResource AccientColor1}"
                           FontSize="16"/>
            </StackPanel>
            
        </Grid>
    </Border>
</UserControl>
