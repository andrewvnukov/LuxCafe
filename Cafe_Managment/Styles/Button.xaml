<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    >

    <Style x:Key="DefaultRadioButton" TargetType="RadioButton">
        <Setter Property="HorizontalAlignment"
         Value="Center" />
        <Setter Property="VerticalAlignment"
         Value="Center" />
        <Setter Property="Margin"
         Value="0,5,0,0" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">

                    <Border x:Name="border"
                     Height="50"
                     Width="228"
                     BorderThickness="0">

                        <Border.Background>
                            <SolidColorBrush x:Name="BorderBackground"
                                      Color="Transparent" />
                        </Border.Background>

                        <Grid>

                            <Border x:Name="Indicator"
                             Height="35"
                             Width="4"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Center"
                             Background="#FFFFFF"
                             Visibility="Collapsed"
                             CornerRadius="2" />

                            <TextBlock Text="{TemplateBinding Content}"
                                       FontSize="{TemplateBinding FontSize}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontWeight="DemiBold">
                                <TextBlock.Foreground>
                                    <SolidColorBrush x:Name="TextColor" Color="{DynamicResource Color_NormalText1}"/>
                                </TextBlock.Foreground>
                            </TextBlock>
                        </Grid>

                    </Border>

                    <ControlTemplate.Triggers>

                        <Trigger Property="IsMouseOver"
                          Value="True">

                            <Setter Property="Visibility"
                             TargetName="Indicator"
                             Value="Visible" />

                        </Trigger>

                        <EventTrigger RoutedEvent="Border.MouseEnter"
                               SourceName="border">

                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetName="BorderBackground"
                                             Storyboard.TargetProperty="Color"
                                             To="Aqua"
                                             Duration="0:0:0.3" />
                                </Storyboard>
                            </BeginStoryboard>

                        </EventTrigger>

                        <EventTrigger RoutedEvent="Border.MouseLeave"
                               SourceName="border">

                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetName="BorderBackground"
                                             Storyboard.TargetProperty="Color"
                                             From="#3E434A"
                                             To="#272B2F"
                                             Duration="0:0:0.3" />
                                </Storyboard>
                            </BeginStoryboard>

                        </EventTrigger>

                        <Trigger Property="IsChecked"
                          Value="True">

                            <Setter Property="Background"
                             TargetName="border"
                             Value="#212529" />

                            <Setter Property="Visibility"
                             TargetName="Indicator"
                             Value="Visible" />

                        </Trigger>

                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="CloseApp" TargetType="Button">

        <Setter Property="Width" Value="22"/>
        <Setter Property="Height" Value="22"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Foreground" Value="White"/>


        <Setter Property="Template">

            <Setter.Value>

                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Image x:Name="CrossIcon" Source="/Images/Cross.png" Panel.ZIndex="2" Margin="4"/>
                        <Border x:Name="IconBack" Background="Red" Visibility="Hidden" CornerRadius="3" Opacity="0.3" Panel.ZIndex="1"/>
                    </Grid>
                    <ControlTemplate.Triggers>

                        <Trigger Property="IsMouseOver" Value="True">

                            <Setter TargetName="IconBack" Property="Visibility" Value="Visible"/>

                        </Trigger>

                    </ControlTemplate.Triggers>

                </ControlTemplate>


            </Setter.Value>

        </Setter>

    </Style>

    <Style x:Key="DefaultButton" TargetType="Button">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate x:Name="border" TargetType="Button">
                    <Border
                        CornerRadius="15"
                            TextBlock.Foreground="{TemplateBinding Foreground}"
                            x:Name="Border"
                            BorderThickness="1.5"
                        >
                        <Border.Background>
                            <SolidColorBrush x:Name="BorderBackground" Opacity="1" Color="{DynamicResource DisableButtonColor1}"/>
                        </Border.Background>
                        <Border.BorderBrush>
                            <SolidColorBrush x:Name="BorderColor" Opacity="1" Color="Transparent"/>
                        </Border.BorderBrush>
                            
                        <TextBlock Text="{TemplateBinding Content}"
                                   FontSize="{TemplateBinding FontSize}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="DemiBold">
                            <TextBlock.Foreground>
                                <SolidColorBrush x:Name="TextColor" Color="LightGray"/>
                            </TextBlock.Foreground>
                        </TextBlock>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup Name="CommonStates">
                                <VisualState Name="Normal">
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="BorderBackground"
                                                        Storyboard.TargetProperty="Color" 
                                                        To="{DynamicResource NormalButtonColor1}" 
                                                        Duration="0:0:0.5"/>
                                        
                                        
                                        <ColorAnimation Storyboard.TargetName="TextColor"
                                                        Storyboard.TargetProperty="Color"
                                                        To="{DynamicResource Color_NormalText1}"
                                                        Duration="0:0:0.5"/>
                                        
                                    </Storyboard>
                                </VisualState>
                                <VisualState Name="Disabled">
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="BorderBackground"
                                                        Storyboard.TargetProperty="Color"
                                                        To="{DynamicResource DisableButtonColor1}"
                                                        Duration="0:0:0.5"/>
                                        <ColorAnimation Storyboard.TargetName="TextColor"
                                                        Storyboard.TargetProperty="Color"
                                                        To="LightGray"
                                                        Duration="0:0:0.5"/>
                                        
             
                                    </Storyboard>
                                </VisualState>
                                <VisualState Name="MouseOver">
                                    <Storyboard Duration="0:0:0.5">
                                        
                                        <ColorAnimation Storyboard.TargetName="BorderColor"
                                                        Storyboard.TargetProperty="Color"
                                                        To="White"
                                                        Duration="0:0:0.5"
                                                        />
                                        <ColorAnimation Storyboard.TargetName="BorderBackground"
                                                        Storyboard.TargetProperty="Color"
                                                        To="{DynamicResource NormalButtonColor1}"
                                                        Duration="0:0:0.5"/>
                                        <ColorAnimation Storyboard.TargetName="TextColor"
                                                        Storyboard.TargetProperty="Color"
                                                        To="{DynamicResource Color_NormalText1}"
                                                        Duration="0:0:0.5"/>

                                    </Storyboard>
                                    
                                </VisualState>
                                <VisualState Name="Pressed">
                                    <Storyboard Duration="0:0:0.5">
                                        <ColorAnimation Storyboard.TargetName="BorderBackground"
                                                        Storyboard.TargetProperty="Color"
                                                        To="{DynamicResource PressedButtonColor1}"
                                                        Duration="0:0:0.5"/>

                                        
                                        <ColorAnimation Storyboard.TargetName="TextColor"
                                                        Storyboard.TargetProperty="Color"
                                                        To="{DynamicResource Color_NormalText1}"
                                                        Duration="0:0:0.5"/>
                                        <ColorAnimation Storyboard.TargetName="BorderColor"
                                                        Storyboard.TargetProperty="Color"
                                                        To="{DynamicResource BorderGradientColor1}"
                                                        Duration="0:0:0.5"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Border>
                    
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>
</ResourceDictionary>