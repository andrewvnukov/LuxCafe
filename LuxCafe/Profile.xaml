<Page x:Class="LuxCafe.Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LuxCafe"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Profile">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Foreground="{DynamicResource DefaultText}" Text="Ваш профиль" Style="{DynamicResource MaterialDesignHeadline2TextBlock}" HorizontalAlignment="Center" Height="Auto" VerticalAlignment="Center"/>

        <TextBlock Grid.Column="2" Text="Ваша фотография" Foreground="{DynamicResource DefaultText}" Style="{DynamicResource MaterialDesignHeadline6TextBlock }" />

    </Grid>
</Page>
